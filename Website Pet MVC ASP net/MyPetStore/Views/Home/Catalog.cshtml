@model List<Animal>
<h1>Animals Catalog</h1>


<form method="get" asp-action="Catalog" asp-controller="Home">
    <label for="categoryId">Select a Category of Animal</label>
    <select id="categoryId" name="categoryId" class="form-control" >
        <option disabled selected>Select Category</option>
        @foreach (var category in ViewBag.Categories)
        {
                <option value="@category.CategoryId">@category.Name</option>
        }
    </select>

    <button type="submit" class="btn btn-primary">Apply Filter Or click again to reset </button>
</form>

<table>
    <tr>
        <th>Photo</th>
        <th>Name</th>
        <th>Link</th>
    </tr>
    @foreach (var animal in Model)
    {
            <tr>
                    <td><img src="@Url.Content(animal.Photo)" width="100" height="100" /></td>
                <td>@animal.Name</td>
                <td><a asp-controller="Home" asp-action="Animal" asp-route-animalId="@animal.AnimalId"> Details </a></td>
            </tr>
    }
</table>

     <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>

