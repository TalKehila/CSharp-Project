
@model List<Animal>

<h1>Delete Page (Only Admin Can Enter)</h1>

@if (Model.Any())
{
        <table>
           
            <tbody>
            @foreach (var animal in Model)
            {
                <tr>
                <td><img src="@animal.Photo" width="100" height="100" /></td>
                <td>@animal.Name</td>
                <td>
                 <form method="Delete" action="/Home/DeleteAnimal">                        
                <input type="hidden" name="AnimalId" value="@animal.AnimalId" />
                <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this animal?');" />
                </form>
                </td>
                </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>No animals found.</p>
}

<style>

table {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
}

table, th, td {
    border: 1px solid #ccc;
}

th, td {
    padding: 10px;
    text-align: center;
}

/* Style the table header */
th {
    background-color: #333;
    color: #fff;
}

/* Style the table rows */
tr:nth-child(even) {
    background-color: #f2f2f2;
}

/* Style the delete button */
input[type="submit"] {
    background-color: #ff5555;
    color: #fff;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

input[type="submit"]:hover {
    background-color: #ff0000;
}

/* Center the table */
h1 {
    text-align: center;
    font-size: 24px;
    margin-bottom: 20px;
}

/* Center the table within a container */
.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}
</style>